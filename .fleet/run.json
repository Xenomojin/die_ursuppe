{
    "configurations": [
        {
            "type": "cargo",
            "name": "run dev dynamic (linux only)",
            "cargoArgs": [ "run", "--features", "bevy/dynamic" ],
        },
        {
            "type": "cargo",
            "name": "run dev",
            "cargoArgs": [ "run" ],
        },
        {
            "type": "cargo",
            "name": "run release",
            "cargoArgs": [ "run", "--release" ],
        },
        {
            "type": "cargo",
            "name": "clean",
            "cargoArgs": [ "clean" ],
        },
        {
            "type": "cargo",
            "name": "run profiling",
            "cargoArgs": [ "run", "--release", "--features", "bevy/trace_chrome" ],
        },
    ]
}